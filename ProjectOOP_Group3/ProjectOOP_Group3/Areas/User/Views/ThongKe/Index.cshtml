@{
    ViewBag.Title = "Thống kê Phiếu Yêu Cầu";
    var thongKe = ViewBag.ThongKe as ProjectOOP_Group3.Areas.User.Models.ThongKeViewModel;
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Thống kê Phiếu Yêu Cầu</h1>

    <!-- Form chọn loại thống kê -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        @using (Html.BeginForm("Index", "ThongKe", new { area = "User" }, FormMethod.Get, new { @id = "thongKeForm" }))
        {
            <!-- Chọn loại thống kê -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-3">Loại thống kê</label>
                <div class="flex gap-6">
                    <label class="flex items-center cursor-pointer">
                        <input type="radio" name="loaiThongKe" value="thang" @(ViewBag.LoaiThongKe == null || ViewBag.LoaiThongKe == "thang" ? "checked" : "") 
                               class="w-4 h-4 text-amber-600 focus:ring-amber-500" onchange="toggleThongKeTypeAndSubmit('thang')">
                        <span class="ml-2 text-gray-700">Thống kê theo tháng</span>
                    </label>
                    <label class="flex items-center cursor-pointer">
                        <input type="radio" name="loaiThongKe" value="ngay" @(ViewBag.LoaiThongKe == "ngay" ? "checked" : "") 
                               class="w-4 h-4 text-amber-600 focus:ring-amber-500" onchange="toggleThongKeTypeAndSubmit('ngay')">
                        <span class="ml-2 text-gray-700">Thống kê theo ngày</span>
                    </label>
                </div>
            </div>

            <!-- Hidden field để giữ giá trị loaiThongKe -->
            <input type="hidden" name="loaiThongKe" id="loaiThongKeHidden" value="@(ViewBag.LoaiThongKe ?? "thang")" />

            <!-- Form thống kê theo tháng -->
            <div id="thongKeThang" class="grid grid-cols-1 md:grid-cols-3 gap-4" style="display: @(ViewBag.LoaiThongKe == "ngay" ? "none" : "grid");">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Năm</label>
                    @Html.DropDownList("year", (SelectList)ViewBag.Years, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none", onchange = "submitForm('thang')" })
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Tháng</label>
                    <select name="month" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none" onchange="submitForm('thang')">
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i" @(ViewBag.Month == i ? "selected" : "")>Tháng @i</option>
                        }
                    </select>
                </div>
                <div class="flex items-end">
                    <button type="button" onclick="submitForm('thang')" class="w-full bg-amber-500 text-white px-6 py-2 rounded-lg hover:bg-amber-600 transition-colors">
                        Xem thống kê
                    </button>
                </div>
            </div>

            <!-- Form thống kê theo ngày -->
            <div id="thongKeNgay" class="grid grid-cols-1 md:grid-cols-3 gap-4" style="display: @(ViewBag.LoaiThongKe == "ngay" ? "grid" : "none");">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Ngày</label>
                    @{
                        // Cho phép chọn ngày từ 5 năm trước đến 5 năm sau
                        var minDateThongKe = DateTime.Now.AddYears(-5).ToString("yyyy-MM-dd");
                        var maxDateThongKe = DateTime.Now.AddYears(5).ToString("yyyy-MM-dd");
                    }
                    <input type="date" name="selectedDate" value="@(ViewBag.SelectedDate ?? DateTime.Now.ToString("yyyy-MM-dd"))" 
                           min="@minDateThongKe"
                           max="@maxDateThongKe"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none" 
                           onchange="submitForm('ngay')">
                </div>
                <div class="flex items-end">
                    <button type="button" onclick="submitForm('ngay')" class="w-full bg-amber-500 text-white px-6 py-2 rounded-lg hover:bg-amber-600 transition-colors">
                        Xem thống kê
                    </button>
                </div>
            </div>
        }
    </div>

    @if (thongKe != null)
    {
        <!-- Nút Export Excel -->
        <div class="mb-6 flex justify-end">
            @if (ViewBag.LoaiThongKe == "ngay")
            {
                <a href="@Url.Action("ExportExcel", "ThongKe", new { area = "User", loaiThongKe = "ngay", selectedDate = ViewBag.SelectedDate ?? DateTime.Now.ToString("yyyy-MM-dd") })" class="inline-flex items-center bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Xuất Excel
                </a>
            }
            else
            {
                <a href="@Url.Action("ExportExcel", "ThongKe", new { area = "User", loaiThongKe = "thang", year = ViewBag.Year ?? DateTime.Now.Year, month = ViewBag.Month ?? DateTime.Now.Month })" class="inline-flex items-center bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Xuất Excel
                </a>
            }
        </div>

        <!-- Thống kê tổng quan -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center">
                    <div class="bg-amber-100 p-3 rounded-lg mr-4">
                        <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">Tổng số</p>
                        <p class="text-2xl font-bold text-gray-800">@thongKe.TongSo</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center">
                    <div class="bg-yellow-100 p-3 rounded-lg mr-4">
                        <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">Chờ duyệt</p>
                        <p class="text-2xl font-bold text-yellow-600">@thongKe.ChoDuyet</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center">
                    <div class="bg-green-100 p-3 rounded-lg mr-4">
                        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">Đã duyệt</p>
                        <p class="text-2xl font-bold text-green-600">@thongKe.DaDuyet</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center">
                    <div class="bg-red-100 p-3 rounded-lg mr-4">
                        <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">Từ chối</p>
                        <p class="text-2xl font-bold text-red-600">@thongKe.TuChoi</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Danh sách chi tiết -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-xl font-semibold text-gray-800">Danh sách phiếu yêu cầu</h2>
            </div>
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã PYC</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày lập</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bộ phận</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in thongKe.PhieuYeuCaus)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@item.MaPYC</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@(item.NgayLap?.ToString("dd/MM/yyyy") ?? "")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@(item.BoPhan?.TenBP ?? "")</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @{
                                    string badgeClass = "px-2 py-1 rounded-full text-xs font-semibold ";
                                    if (item.TrangThai == "Đã duyệt")
                                    {
                                        badgeClass += "bg-green-100 text-green-800";
                                    }
                                    else if (item.TrangThai == "Từ chối")
                                    {
                                        badgeClass += "bg-red-100 text-red-800";
                                    }
                                    else
                                    {
                                        badgeClass += "bg-yellow-100 text-yellow-800";
                                    }
                                }
                                <span class="@badgeClass">@(item.TrangThai ?? "")</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (thongKe.PhieuYeuCaus.Count == 0)
            {
                <div class="text-center py-12 text-gray-500">
                    @if (ViewBag.LoaiThongKe == "ngay")
                    {
                        <text>Không có dữ liệu trong ngày này</text>
                    }
                    else
                    {
                        <text>Không có dữ liệu trong tháng này</text>
                    }
                </div>
            }
        </div>
    }
</div>

<script>
    function toggleThongKeType(loaiThongKe) {
        var thongKeThang = document.getElementById('thongKeThang');
        var thongKeNgay = document.getElementById('thongKeNgay');
        var hiddenField = document.getElementById('loaiThongKeHidden');
        
        hiddenField.value = loaiThongKe;
        
        if (loaiThongKe === 'thang') {
            thongKeThang.style.display = 'grid';
            thongKeNgay.style.display = 'none';
        } else {
            thongKeThang.style.display = 'none';
            thongKeNgay.style.display = 'grid';
        }
    }
    
    function toggleThongKeTypeAndSubmit(loaiThongKe) {
        toggleThongKeType(loaiThongKe);
        // Submit form để load lại với loại thống kê mới
        document.getElementById('thongKeForm').submit();
    }
    
    function submitForm(loaiThongKe) {
        var hiddenField = document.getElementById('loaiThongKeHidden');
        hiddenField.value = loaiThongKe;
        document.getElementById('thongKeForm').submit();
    }
</script>

