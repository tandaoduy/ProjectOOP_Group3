@model ProjectOOP_Group3.Modal.DonDatHang

@{
    ViewBag.Title = "Chi tiết Đơn Đặt Hàng";
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Chi tiết Đơn Đặt Hàng</h1>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Mã DDH</label>
                <p class="text-lg font-semibold text-gray-800">@Model.MaDDH</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Mã PYC</label>
                <p class="text-lg text-gray-800">@Model.MaPYC</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Nhà cung cấp</label>
                <p class="text-lg text-gray-800">@(Model.NhaCungCap?.TenNCC ?? "")</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Ngày lập</label>
                <p class="text-lg text-gray-800">@(Model.NgayLap?.ToString("dd/MM/yyyy") ?? "")</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Ngày giao dự kiến</label>
                <p class="text-lg text-gray-800">@(Model.NgayGiaoDuKien?.ToString("dd/MM/yyyy") ?? "")</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Tổng tiền</label>
                <p class="text-lg font-semibold text-amber-600">@(Model.TongTien?.ToString("N0") ?? "0") đ</p>
            </div>
            @if (!String.IsNullOrEmpty(Model.DieuKhoan))
            {
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-500 mb-1">Điều khoản</label>
                    <p class="text-lg text-gray-800">@Model.DieuKhoan</p>
                </div>
            }
        </div>

        <!-- Chi tiết từ PYC - chỉ hiển thị mặt hàng cùng nhà cung cấp -->
        @{
            var chiTietPYCs = new List<ProjectOOP_Group3.Modal.ChiTietPYC>();
            
            if (Model.PhieuYeuCau != null && Model.PhieuYeuCau.ChiTietPYCs != null && !String.IsNullOrEmpty(Model.MaNCC))
            {
                // Lọc các chi tiết có MaNCC_Gán trùng với nhà cung cấp của đơn đặt hàng
                chiTietPYCs = Model.PhieuYeuCau.ChiTietPYCs
                    .Where(c => c.MaNCC_Gán == Model.MaNCC)
                    .ToList();
                
                // Nếu không có chi tiết nào có MaNCC_Gán, thử lấy từ BangGiaNhaCungCap
                if (chiTietPYCs.Count == 0)
                {
                    var db = new ProjectOOP_Group3.Modal.ProjectOOP_Nhom3Entities1();
                    var chiTietKhongCoNCC = Model.PhieuYeuCau.ChiTietPYCs
                        .Where(c => String.IsNullOrEmpty(c.MaNCC_Gán) && !String.IsNullOrEmpty(c.MaMH))
                        .ToList();
                    
                    foreach (var chiTiet in chiTietKhongCoNCC)
                    {
                        var bangGia = db.BangGiaNhaCungCaps
                            .Where(b => b.MaMH == chiTiet.MaMH && b.MaNCC == Model.MaNCC)
                            .OrderByDescending(b => b.NgayCapNhat)
                            .FirstOrDefault();
                        
                        if (bangGia != null)
                        {
                            chiTietPYCs.Add(chiTiet);
                        }
                    }
                }
            }
        }
        
        @if (chiTietPYCs.Any())
        {
            <div class="border-t border-gray-200 pt-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Chi tiết mặt hàng</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Mã MH</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tên mặt hàng</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Số lượng</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Đơn giá dự kiến</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var chiTiet in chiTietPYCs)
                            {
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@chiTiet.MaMH</td>
                                    <td class="px-6 py-4 text-sm text-gray-900">@(chiTiet.MatHang?.TenMH ?? "")</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@chiTiet.SoLuong</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@(chiTiet.DonGiaDuKien?.ToString("N0") ?? "")</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                                        @((chiTiet.DonGiaDuKien * chiTiet.SoLuong)?.ToString("N0") ?? "")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
    
    <!-- Nút Quay lại và In -->
    <div class="mt-6 flex justify-end space-x-4">
        @Html.ActionLink("Quay lại", "Index", "DonDatHang", new { area = "User" }, new { @class = "bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors" })
        <a href="@Url.Action("Print", "DonDatHang", new { area = "User", id = Model.MaDDH })" target="_blank" class="bg-amber-500 text-white px-6 py-2 rounded-lg hover:bg-amber-600 transition-colors inline-flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
            </svg>
            In Đơn Hàng
        </a>
    </div>
</div>

