@model ProjectOOP_Group3.Modal.PhieuYeuCau

@{
    ViewBag.Title = "Duyệt Phiếu Yêu Cầu";
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Duyệt Phiếu Yêu Cầu</h1>

    <!-- Thông tin phiếu yêu cầu -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Thông tin phiếu yêu cầu</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Mã PYC</label>
                <p class="text-lg font-semibold text-gray-800">@Model.MaPYC</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Ngày lập</label>
                <p class="text-lg text-gray-800">@(Model.NgayLap?.ToString("dd/MM/yyyy") ?? "")</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Bộ phận</label>
                <p class="text-lg text-gray-800">@(Model.BoPhan?.TenBP ?? "")</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Lý do</label>
                <p class="text-lg text-gray-800">@(Model.LyDo ?? "")</p>
            </div>
        </div>

        <!-- Chi tiết mặt hàng -->
        <div class="mt-6 border-t border-gray-200 pt-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Chi tiết mặt hàng</h3>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Mã MH</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tên mặt hàng</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Số lượng</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Đơn giá dự kiến</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var chiTiet in Model.ChiTietPYCs)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@chiTiet.MaMH</td>
                                <td class="px-6 py-4 text-sm text-gray-900">@(chiTiet.MatHang?.TenMH ?? "")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@chiTiet.SoLuong</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@(chiTiet.DonGiaDuKien?.ToString("N0") ?? "")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Form duyệt -->
    <div class="bg-white rounded-lg shadow-md p-6">
        @using (Html.BeginForm("Duyet", "DuyetPYC", new { area = "Admin" }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.MaPYC)

            if (!ViewData.ModelState.IsValid)
            {
                <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-500 rounded">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p class="text-red-600 text-sm">@error.ErrorMessage</p>
                    }
                </div>
            }

            <div class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Quyết định *</label>
                    <div class="space-y-2">
                        <label class="flex items-center">
                            <input type="radio" name="trangThai" value="Đã duyệt" class="mr-2" required />
                            <span class="text-green-600 font-semibold">Đã duyệt</span>
                        </label>
                        <label class="flex items-center">
                            <input type="radio" name="trangThai" value="Từ chối" class="mr-2" required />
                            <span class="text-red-600 font-semibold">Từ chối</span>
                        </label>
                    </div>
                    @if (ViewData.ModelState["trangThai"] != null && ViewData.ModelState["trangThai"].Errors.Any())
                    {
                        <p class="text-red-500 text-sm mt-1">@ViewData.ModelState["trangThai"].Errors.First().ErrorMessage</p>
                    }
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Ghi chú</label>
                    @Html.TextArea("ghiChuDuyet", "", new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none", rows = "4", placeholder = "Nhập ghi chú (nếu có)..." })
                    @if (ViewData.ModelState["ghiChuDuyet"] != null && ViewData.ModelState["ghiChuDuyet"].Errors.Any())
                    {
                        <p class="text-red-500 text-sm mt-1">@ViewData.ModelState["ghiChuDuyet"].Errors.First().ErrorMessage</p>
                    }
                </div>

                <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200">
                    @Html.ActionLink("Hủy", "Index", "DuyetPYC", new { area = "Admin" }, new { @class = "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors" })
                    <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
                        Xác nhận
                    </button>
                </div>
            </div>
        }
    </div>
</div>
