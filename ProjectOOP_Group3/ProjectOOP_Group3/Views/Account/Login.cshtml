@{
    ViewBag.Title = "Đăng Nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/png" href="@Url.Content("~/Images/logo.png")">
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="margin: 0; padding: 0; overflow-x: hidden;">
<style>
    .login-container {
        min-height: 100vh;
        display: flex;
    }
    
    .login-left {
        flex: 1;
        background-image: url('@Url.Content("~/Images/baner.jpg")');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .login-left::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.4);
        z-index: 1;
    }
    
    .login-left-content {
        position: relative;
        z-index: 2;
        color: white;
        padding: 40px;
        max-width: 600px;
    }
    
    .login-left-title {
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 16px;
        line-height: 1.2;
    }
    
    .login-left-subtitle {
        font-size: 18px;
        opacity: 0.95;
        line-height: 1.6;
    }
    
    .login-right {
        flex: 1;
        background: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 60px 80px;
        max-width: 500px;
        margin: 0 auto;
    }
    
    .login-logo-section {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 40px;
    }
    
    .login-logo-image {
        max-width: 200px;
        height: auto;
    }
    
    .login-divider {
        height: 2px;
        background: linear-gradient(90deg, #f59e0b, #fbbf24);
        margin: 20px 0 30px 0;
    }
    
    .login-form-title {
        font-size: 28px;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 35px;
        text-align: center;
    }
    
    .login-form-wrapper {
        width: 100%;
        max-width: 100%;
        box-sizing: border-box;
    }
    
    .login-form {
        width: 100%;
        max-width: 100%;
        box-sizing: border-box;
    }
    
    .login-form > * {
        box-sizing: border-box;
    }
    
    .login-form form {
        width: 100%;
        max-width: 100%;
        box-sizing: border-box;
    }
    
    .login-input-wrapper {
        position: relative;
        margin-bottom: 24px;
        width: 100%;
        max-width: 100%;
        box-sizing: border-box;
    }
    
    .login-input-icon {
        position: absolute;
        left: 16px;
        top: 50%;
        transform: translateY(-50%);
        width: 20px;
        height: 20px;
        color: #6b7280;
        z-index: 1;
        pointer-events: none;
    }
    
    .login-input {
        width: 100%;
        max-width: 100%;
        padding: 16px 16px 16px 48px;
        border: 2px solid #f59e0b;
        border-radius: 8px;
        font-size: 15px;
        transition: all 0.3s;
        background: white;
        box-shadow: 0 2px 4px rgba(245, 158, 11, 0.1);
        box-sizing: border-box;
        margin: 0;
        display: block;
    }
    
    .login-input:hover {
        border-color: #d97706;
        box-shadow: 0 4px 8px rgba(245, 158, 11, 0.15);
        transform: translateY(-1px);
    }
    
    .login-input:focus {
        outline: none;
        border-color: #f59e0b;
        box-shadow: 0 0 0 4px rgba(245, 158, 11, 0.2), 0 4px 8px rgba(245, 158, 11, 0.2);
        transform: translateY(-1px);
    }
    
    .login-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
        margin-top: 8px;
    }
    
    .login-checkbox-wrapper {
        display: flex;
        align-items: center;
    }
    
    .login-checkbox {
        width: 18px;
        height: 18px;
        margin-right: 8px;
        accent-color: #f59e0b;
    }
    
    .login-checkbox-label {
        font-size: 14px;
        color: #4b5563;
    }
    
    .login-forgot-link {
        font-size: 14px;
        color: #f59e0b;
        text-decoration: none;
        transition: color 0.2s;
    }
    
    .login-forgot-link:hover {
        color: #d97706;
    }
    
    .login-button {
        width: 100%;
        max-width: 100%;
        padding: 16px;
        background: #f59e0b;
        color: white;
        border: 2px solid #f59e0b;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        text-transform: uppercase;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 2px 4px rgba(245, 158, 11, 0.2);
        box-sizing: border-box;
        margin: 0;
        display: block;
    }
    
    .login-button:hover {
        background: #d97706;
        border-color: #d97706;
        box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
        transform: translateY(-2px);
    }
    
    .login-button:active {
        transform: translateY(0);
        box-shadow: 0 2px 4px rgba(245, 158, 11, 0.2);
    }
    
    /* Animations */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
    
    @@keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(50px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
    
    @@keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-50px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
    
    .login-left {
        animation: fadeIn 1s ease-out;
    }
    
    .login-left-content {
        animation: slideInLeft 1s ease-out 0.3s both;
    }
    
    .login-right {
        animation: slideInRight 1s ease-out 0.3s both;
    }
    
    .login-logo-section {
        animation: fadeInUp 0.8s ease-out 0.5s both;
    }
    
    .login-divider {
        animation: fadeIn 0.8s ease-out 0.7s both;
    }
    
    .login-form-title {
        animation: fadeInUp 0.8s ease-out 0.8s both;
    }
    
    .login-input-wrapper {
        animation: fadeInUp 0.8s ease-out both;
    }
    
    .login-input-wrapper:nth-of-type(1) {
        animation-delay: 1s;
    }
    
    .login-input-wrapper:nth-of-type(2) {
        animation-delay: 1.2s;
    }
    
    .login-options {
        animation: fadeInUp 0.8s ease-out 1.4s both;
    }
    
    .login-button {
        animation: fadeInUp 0.8s ease-out 1.6s both;
    }
    
    .login-error {
        animation: fadeInUp 0.5s ease-out;
    }
    
    .login-error {
        background: #fef2f2;
        border-left: 4px solid #ef4444;
        padding: 12px 16px;
        margin-bottom: 20px;
        border-radius: 4px;
    }
    
    .login-error-text {
        color: #dc2626;
        font-size: 14px;
    }
    
    @@media (max-width: 1024px) {
        .login-container {
            flex-direction: column;
        }
        
        .login-left {
            min-height: 300px;
        }
        
        .login-right {
            padding: 40px;
        }
    }
</style>

<div class="login-container">
    <!-- Left Side - Background Image with Text -->
    <div class="login-left">
        <div class="login-left-content">
            <h1 class="login-left-title">
                Trải nghiệm du lịch đẳng cấp tại Mường Thanh Hospitality
            </h1>
        </div>
    </div>
    
    <!-- Right Side - Login Form -->
    <div class="login-right">
        <!-- Logo Section -->
        <div class="login-logo-section">
            <img src="@Url.Content("~/Images/logo.png")" alt="Mường Thanh Logo" class="login-logo-image" />
        </div>
        
        <!-- Divider -->
        <div class="login-divider"></div>
        
        <!-- Form Title -->
        <h2 class="login-form-title">Đăng Nhập / Login</h2>
        
        <!-- Error Messages -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="login-error">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p class="login-error-text">@error.ErrorMessage</p>
                }
            </div>
        }
        
        <!-- Login Form -->
        <div class="login-form-wrapper">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form", style = "width: 100%; box-sizing: border-box;" }))
            {
                @Html.AntiForgeryToken()
                
                <!-- Email/Employee ID Field -->
                <div class="login-input-wrapper">
                    <svg class="login-input-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <input id="maNV" 
                           name="maNV" 
                           type="text" 
                           required 
                           autofocus
                           class="login-input" 
                           placeholder="Email / Mã nhân viên"
                           autocomplete="username" />
                    @if (ViewData.ModelState["maNV"] != null && ViewData.ModelState["maNV"].Errors.Any())
                    {
                        <p class="text-red-500 text-sm mt-1">@ViewData.ModelState["maNV"].Errors.First().ErrorMessage</p>
                    }
                </div>
                
                <!-- Password Field -->
                <div class="login-input-wrapper">
                    <svg class="login-input-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                    <input id="matKhau" 
                           name="matKhau" 
                           type="password" 
                           required 
                           class="login-input" 
                           placeholder="Mật khẩu / Password"
                           autocomplete="current-password" />
                    @if (ViewData.ModelState["matKhau"] != null && ViewData.ModelState["matKhau"].Errors.Any())
                    {
                        <p class="text-red-500 text-sm mt-1">@ViewData.ModelState["matKhau"].Errors.First().ErrorMessage</p>
                    }
                </div>
                
                <!-- Options -->
                <div class="login-options">
                    <div class="login-checkbox-wrapper">
                        <input type="checkbox" id="rememberMe" name="rememberMe" class="login-checkbox" />
                        <label for="rememberMe" class="login-checkbox-label">Ghi nhớ tài khoản</label>
                    </div>
                    <a href="#" class="login-forgot-link">Quên mật khẩu?</a>
                </div>
                
                <!-- Submit Button -->
                <button type="submit" class="login-button">
                    ĐĂNG NHẬP / LOGIN
                </button>
            }
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
</body>
</html>
