@model ProjectOOP_Group3.Models.PhieuYeuCau

@{
    ViewBag.Title = "Chi tiết Phiếu Yêu Cầu";
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Chi tiết Phiếu Yêu Cầu</h1>
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "text-indigo-600 hover:text-indigo-800" })
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Mã PYC</label>
                <p class="text-lg font-semibold text-gray-800">@Model.MaPYC</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Ngày lập</label>
                <p class="text-lg text-gray-800">@(Model.NgayLap?.ToString("dd/MM/yyyy HH:mm") ?? "")</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Bộ phận yêu cầu</label>
                <p class="text-lg text-gray-800">@(Model.BoPhan?.TenBP ?? "")</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Trạng thái</label>
                @{
                    string badgeClass = "px-3 py-1 rounded-full text-sm font-semibold inline-block ";
                    if (Model.TrangThai == "Đã duyệt")
                        badgeClass += "bg-green-100 text-green-800";
                    else if (Model.TrangThai == "Từ chối")
                        badgeClass += "bg-red-100 text-red-800";
                    else
                        badgeClass += "bg-yellow-100 text-yellow-800";
                }
                <span class="@badgeClass">@(Model.TrangThai ?? "")</span>
            </div>
            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-500 mb-1">Lý do</label>
                <p class="text-lg text-gray-800">@(Model.LyDo ?? "")</p>
            </div>
            @if (Model.NgayDuyet.HasValue)
            {
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">Ngày duyệt</label>
                    <p class="text-lg text-gray-800">@Model.NgayDuyet.Value.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">Người duyệt</label>
                    <p class="text-lg text-gray-800">@(Model.NhanVien1?.HoTen ?? "")</p>
                </div>
                @if (!String.IsNullOrEmpty(Model.GhiChuDuyet))
                {
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-500 mb-1">Ghi chú duyệt</label>
                        <p class="text-lg text-gray-800">@Model.GhiChuDuyet</p>
                    </div>
                }
            }
        </div>

        <!-- Chi tiết mặt hàng -->
        <div class="border-t border-gray-200 pt-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Chi tiết mặt hàng</h2>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Mã MH</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tên mặt hàng</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Số lượng</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nhà cung cấp</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Đơn giá dự kiến</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var chiTiet in Model.ChiTietPYCs)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@chiTiet.MaMH</td>
                                <td class="px-6 py-4 text-sm text-gray-900">@(chiTiet.MatHang?.TenMH ?? "")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@chiTiet.SoLuong</td>
                                <td class="px-6 py-4 text-sm text-gray-900">@(chiTiet.NhaCungCap?.TenNCC ?? "")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@(chiTiet.DonGiaDuKien?.ToString("N0") ?? "")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                                    @((chiTiet.DonGiaDuKien * chiTiet.SoLuong)?.ToString("N0") ?? "")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

