@model ProjectOOP_Group3.Models.DonDatHang

@{
    ViewBag.Title = "Tạo Đơn Đặt Hàng";
    var chiTietPYC = ViewBag.ChiTietPYC as IEnumerable<ProjectOOP_Group3.Models.ChiTietPYC>;
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Tạo Đơn Đặt Hàng</h1>

    @using (Html.BeginForm("Create", "DonDatHang", FormMethod.Post, new { @class = "bg-white rounded-lg shadow-md p-6" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.MaPYC)

        <div class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Mã PYC</label>
                    <p class="text-lg font-semibold text-gray-800">@Model.MaPYC</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Nhà cung cấp *</label>
                    @Html.DropDownListFor(m => m.MaNCC, (SelectList)ViewBag.MaNCC, "Chọn nhà cung cấp", new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none", required = "required" })
                    @Html.ValidationMessageFor(m => m.MaNCC, "", new { @class = "text-red-500 text-sm" })
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Ngày giao dự kiến *</label>
                    @Html.TextBoxFor(m => m.NgayGiaoDuKien, "{0:yyyy-MM-dd}", new { @type = "date", @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none", required = "required" })
                    @Html.ValidationMessageFor(m => m.NgayGiaoDuKien, "", new { @class = "text-red-500 text-sm" })
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Điều khoản</label>
                    @Html.TextAreaFor(m => m.DieuKhoan, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none", rows = "3", placeholder = "Nhập điều khoản..." })
                </div>
            </div>

            <!-- Chi tiết mặt hàng từ PYC -->
            @if (chiTietPYC != null && chiTietPYC.Any())
            {
                <div class="border-t border-gray-200 pt-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Chi tiết mặt hàng</h2>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Mã MH</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tên mặt hàng</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Số lượng</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Đơn giá dự kiến</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                @foreach (var chiTiet in chiTietPYC)
                                {
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@chiTiet.MaMH</td>
                                        <td class="px-6 py-4 text-sm text-gray-900">@(chiTiet.MatHang?.TenMH ?? "")</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@chiTiet.SoLuong</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@(chiTiet.DonGiaDuKien?.ToString("N0") ?? "")</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                                            @((chiTiet.DonGiaDuKien * chiTiet.SoLuong)?.ToString("N0") ?? "")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200">
                @Html.ActionLink("Hủy", "Index", null, new { @class = "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors" })
                <button type="submit" class="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors">
                    Tạo đơn đặt hàng
                </button>
            </div>
        </div>
    }
</div>

